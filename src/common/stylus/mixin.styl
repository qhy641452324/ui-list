// 不换行
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
  word-break: keep-all;

/* 不换行 */

rowsNoWrap($rows)
  word-break break-all
  text-overflow ellipsis
  -webkit-box-orient vertical
  -webkit-line-clamp $rows
  display -webkit-box
  overflow hidden

// flex兼容
displayFlex()
  display -webkit-box
  display -webkit-flex
  display -ms-flexbox
  display flex

flex($num)
  -webkit-box-flex $num
  box-flex $num
  -webkit-flex $num
  flex $num
  width 0

placeholder($fontSize, $color)
  &::-webkit-input-placeholder
    font-size $fontSize
    color $color
  &::-moz-placeholder
    font-size $fontSize
    color $color
  &::-moz-placeholder
    font-size $fontSize
    color $color
  &::-ms-input-placeholder
    font-size $fontSize
    color $color

transitionFunction($time)
  -webkit-transition: all $time
  -moz-transition: all $time
  -ms-transition: all $time
  -o-transition: all $time
  transition: all $time

textSelect()
  -webkit-user-select: text
  -moz-user-select: text
  -ms-user-select: text
  user-select: text
